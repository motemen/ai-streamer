{
  "name": "@motemen/ai-streamer",
  "version": "0.0.1",
  "type": "module",
  "bin": {
    "ai-streamer": "./dist/bin/ai-streamer.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "run-p 'dev:server {@}' 'dev:client'",
    "dev:server": "tsx server.ts",
    "dev:client": "vite",
    "build": "run-s build:client build:server build:avatars",
    "build:server": "tsc -p tsconfig.server.json",
    "build:client": "vite build",
    "build:avatars": "cp -r ./avatars ./dist/avatars",
    "lint": "biome lint",
    "lint:fix": "biome lint --fix",
    "format": "biome format --fix",
    "preview": "vite preview",
    "test": "pnpm run test:unit --run && pnpm run test:e2e",
    "test:unit": "vitest",
    "test:e2e": "vite build && playwright test",
    "generate": "hcm './src/**/*.module.css'"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^2.0.2",
    "@ai-sdk/google": "^2.0.5",
    "@ai-sdk/openai": "^2.0.11",
    "@hono/node-server": "^1.13.7",
    "@hono/node-ws": "^1.0.5",
    "@modelcontextprotocol/sdk": "^1.11.4",
    "ai": "^5.0.11",
    "c12": "^2.0.1",
    "debug": "^4.4.0",
    "fetch-to-node": "^2.1.0",
    "hono": "^4.6.14",
    "p-queue": "^8.0.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.3",
    "@eslint/js": "^9.17.0",
    "@playwright/test": "^1.49.1",
    "@types/debug": "^4.1.12",
    "@types/node": "^22.10.2",
    "@types/react": "^19.1.3",
    "@types/react-dom": "^19.1.3",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "commander": "^13.0.0",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.13.0",
    "happy-css-modules": "^3.2.0",
    "npm-run-all2": "^7.0.2",
    "postcss": "^8.4.49",
    "tsx": "^4.19.2",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.18.1",
    "vite": "^6.0.3",
    "vitest": "^3.1.4"
  },
  "packageManager": "pnpm@9.15.1+sha512.1acb565e6193efbebda772702950469150cf12bcc764262e7587e71d19dc98a423dff9536e57ea44c49bdf790ff694e83c27be5faa23d67e0c033b583be4bfcf"
}
